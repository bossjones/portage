# Portage options
FEATURES="cgroup ipc-sandbox multilib-strict network-sandbox stricter"
GENTOO_MIRRORS="http://lug.mtu.edu/gentoo/ http://gentoo.cites.uiuc.edu/pub/gentoo/"
PORTAGE_COMPRESS="xz"
PORTAGE_COMPRESS_FLAGS="-4"
PORTAGE_NICENESS="2"
PORTAGE_TMPDIR="/tmp"

# Compilation options
CFLAGS="-fomit-frame-pointer -march=westmere -mtune=native -O2 -pipe"
CXXFLAGS="${CFLAGS}"
LDFLAGS="-Wl,-O1 -Wl,--as-needed -Wl,--hash-style=both"
CHOST="x86_64-pc-linux-gnu"

# Basic USE flags
# General
USE="-bindist hardened -jemalloc3 nptl -pch pie -static-libs -tcmalloc threads xattr"
# Bindings
USE="$USE -cxx -fortran -guile -introspection -lua -orc -perl -python -vala"
# Compression
USE="$USE bzip2 lzma lzo zlib"
# Database
USE="$USE -berkdb -gdbm sqlite"
# Internationalization
USE="$USE -iconv icu -nls unicode"
# Networking
USE="$USE -avahi curl idn ipv6 -kerberos -zeroconf"
# Security
USE="$USE acl caps -cracklib filecaps pam ssl -suid"
# Services
USE="$USE -dbus systemd -tcpd udev"
# Other
USE="$USE git"

# Extended USE flags
CPU_FLAGS_X86="aes mmx mmxext popcnt sse sse2 sse3 sse4_1 sse4_2 ssse3"
LINGUAS="en en_US"
PAX_MARKINGS="XT"
QEMU_SOFTMMU_TARGETS="i386 x86_64"
QEMU_USER_TARGETS=""
